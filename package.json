{
  "name": "preview-swagger.nvim",
  "version": "0.1.0",
  "bin": "./bin/server.js",
  "scripts": {
    "clean": "rimraf app/lib",
    "build": "tsc -p tsconfig.build.json;yarn next build;yarn next export",
    "watch": "tsc -w",
    "lint": "eslint './{bin,lib,src,tests}/**/*.{ts,tsx}'",
    "test-unit": "jest unit --runInBand --config jest.config.json",
    "lint-fix": "eslint --fix './{bin,lib,src,tests}/**/*.{ts,tsx}'",
    "prepare": "npm-run-all clean build"
  },
  "devDependencies": {
    "@types/fs-extra": "9.0.6",
    "@types/jest": "26.0.19",
    "@types/js-yaml": "^3.12.5",
    "@types/markdown-it": "12.0.0",
    "@types/node": "14.14.18",
    "@types/prismjs": "1.16.2",
    "@types/socket.io": "2.1.12",
    "@types/source-map-support": "0.5.3",
    "@types/swagger-ui-react": "^3.35.0",
    "@typescript-eslint/eslint-plugin": "4.11.1",
    "@typescript-eslint/parser": "4.11.1",
    "babel-plugin-prismjs": "2.0.1",
    "dotenv-cli": "4.0.0",
    "eslint": "7.16.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.3.0",
    "fs-extra": "9.0.1",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "ts-jest": "26.4.4",
    "ts-loader": "8.0.13",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  },
  "dependencies": {
    "@types/express": "4.17.9",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "child_process": "1.0.2",
    "express": "4.17.1",
    "gray-matter": "4.0.2",
    "hozi-dev-content-css": "git+https://github.com/hozi-dev/hozi-dev-content-css.git",
    "js-yaml": "^3.14.1",
    "log4js": "6.3.0",
    "markdown-it": "12.0.4",
    "markdown-it-anchor": "6.0.1",
    "markdown-it-br": "1.0.0",
    "markdown-it-imsize": "2.0.1",
    "markdown-it-prism": "2.1.4",
    "neovim": "4.9.0",
    "next": "10.0.4",
    "prismjs": "1.23.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "socket.io": "3.0.4",
    "socket.io-client": "3.0.4",
    "swagger-ui-react": "^3.38.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./{bin,lib,src,tests}/**/*.{ts,tsx}": [
      "yarn lint-fix",
      "yarn lint",
      "git add"
    ]
  }
}
